name: "Acme"
filePrefix: "Acme"

# Translation configuration examples for different providers and models

# Example 1: OpenAI with GPT-4
translation:
  enabled: true
  languages: ["pt-BR", "es-ES", "fr-FR"]
  provider: "openai"
  model: "gpt-4"
  # Uses OPENAI_API_KEY environment variable

---

# Example 2: OpenAI with GPT-4 Turbo (faster, cheaper)
translation:
  enabled: true
  languages: ["pt-BR"]
  provider: "openai"
  model: "gpt-4-turbo"
  # Uses OPENAI_API_KEY environment variable

---

# Example 3: Anthropic Claude 3.5 Sonnet (latest)
translation:
  enabled: true
  languages: ["pt-BR", "es-ES"]
  provider: "anthropic"
  model: "claude-3-5-sonnet-20241022"
  # Uses ANTHROPIC_API_KEY environment variable

---

# Example 4: Anthropic Claude 3 Haiku (faster, cheaper)
translation:
  enabled: true
  languages: ["pt-BR"]
  provider: "anthropic"  
  model: "claude-3-haiku-20240307"
  # Uses ANTHROPIC_API_KEY environment variable

---

# Example 5: Local Ollama with Llama 3
translation:
  enabled: true
  languages: ["pt-BR", "es-ES"]
  provider: "ollama"
  model: "llama3:8b"
  # No API key needed - uses local Ollama server

---

# Example 6: Local Ollama with custom model
translation:
  enabled: true
  languages: ["pt-BR"]
  provider: "ollama"
  model: "mistral:7b-instruct"
  # No API key needed - uses local Ollama server

